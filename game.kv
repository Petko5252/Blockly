<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(20)
        spacing: dp(20)

        Image:
            source: "Blockly.png"
            size_hint_y: 0.5
            allow_stretch: True

        Label:
            text: "Blockly"
            font_size: '32sp'
            bold: True
            color: 1, 1, 1, 1

        Button:
            text: "Start Game"
            size_hint: None, None
            size: dp(200), dp(50)
            pos_hint: {"center_x": 0.5}
            background_normal: ''
            background_color: 0.3, 0.6, 1, 1
            color: 1, 1, 1, 1
            on_release:
                app.root.current = 'game'

<GameScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: dp(10)
        spacing: dp(10)

        BoxLayout:
            size_hint_y: None
            height: dp(50)
            padding: dp(10), 0

            Label:
                id: score_label
                text: "Score: 0"
                font_size: '18sp'
                bold: True
                color: 0.2, 0.2, 0.2, 1
                halign: 'left'
                valign: 'middle'

            Button:
                text: "Reset"
                size_hint: None, None
                size: dp(80), dp(40)
                background_normal: ''
                background_color: 0.9, 0.2, 0.2, 1
                color: 1, 1, 1, 1
                on_release: root.reset_game()

            Button:
                text: "Back"
                size_hint: None, None
                size: dp(80), dp(40)
                background_color: 0.3, 0.3, 0.3, 1
                on_release:
                    app.root.current = 'home'

        AnchorLayout:
            id: grid_placeholder
            anchor_x: 'center'
            anchor_y: 'center'
            size_hint: 1, 1
